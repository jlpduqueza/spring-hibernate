package com.example;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.cfg.Configuration;

public class UserController {
	
	public static void main(String[] args) {
		
		User user = new User();
		UserInfo userInfo = new UserInfo();
		
		Configuration con = new Configuration().configure().addAnnotatedClass(User.class);
		SessionFactory sf = con.buildSessionFactory();
		Session session = sf.openSession();
		session.getTransaction().begin();
		
		//set user
		user.setId(001);
		user.setUsername("jlpduqueza");
		user.setPassword("lee123");
		
		//set userInfo
		userInfo.setFirstName("lee");
		userInfo.setMiddileName("peralta");
		userInfo.setLastName("duqueza");
		
		//add userinfo to user
		user.setUserInfo(userInfo);
		
		//save user
		session.save(user);
		
		//fetch whole user object
		User testUser = session.get(User.class, 001);
		
		System.out.println("User created : " + testUser.getUsername());
		
		session.getTransaction().commit();
		
		// close the session
		System.out.println("closing session");
		session.close();
		sf.close();
	}
}
