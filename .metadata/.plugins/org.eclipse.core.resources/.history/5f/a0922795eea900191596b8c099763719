		    System.out.println(" ------------------- ");
		    System.out.println("id: " + row[0]);
		    System.out.println("username: " + row[1]);
		}
		
		// remove and entity
		session.getTransaction().begin();
		session.remove(user);
		session.getTransaction().commit();
		
		// close the entity manager
		session.close();
		sf.close();
		
